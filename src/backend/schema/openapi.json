{
  "openapi": "3.0.3",
  "info": {
    "title": "Winette API",
    "description": "AI-powered wine label designer API",
    "version": "1.0.0",
    "contact": {
      "name": "Winette Support",
      "url": "https://winette.vercel.app"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    },
    {
      "url": "https://winette.vercel.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Check if the API is running",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/wine-labels": {
      "get": {
        "summary": "Get wine labels",
        "description": "Retrieve wine labels with optional filtering and pagination",
        "parameters": [
          {
            "name": "style",
            "in": "query",
            "description": "Filter by wine style",
            "schema": {
              "$ref": "#/components/schemas/WineStyle"
            }
          },
          {
            "name": "region",
            "in": "query",
            "description": "Filter by region (partial match)",
            "schema": {
              "type": "string",
              "maxLength": 200
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of results to return",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 50,
              "default": 10
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Number of results to skip",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WineLabelsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RateLimitResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create wine label",
        "description": "Create a new wine label",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWineLabelRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Wine label created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WineLabelResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/wine-labels/{id}": {
      "get": {
        "summary": "Get wine label by ID",
        "description": "Retrieve a specific wine label",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Wine label ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WineLabelResponse"
                }
              }
            }
          },
          "404": {
            "description": "Wine label not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update wine label",
        "description": "Update an existing wine label",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Wine label ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWineLabelRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Wine label updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WineLabelResponse"
                }
              }
            }
          },
          "404": {
            "description": "Wine label not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete wine label",
        "description": "Delete a wine label",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Wine label ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Wine label deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "404": {
            "description": "Wine label not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WineStyle": {
        "type": "string",
        "enum": ["red", "white", "ros√©", "sparkling", "dessert"]
      },
      "WineLabel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "maxLength": 100
          },
          "winery": {
            "type": "string",
            "maxLength": 100
          },
          "vintage": {
            "type": "integer",
            "minimum": 1800
          },
          "region": {
            "type": "string",
            "maxLength": 200
          },
          "grape_variety": {
            "type": "string",
            "maxLength": 200
          },
          "alcohol_content": {
            "type": "number",
            "minimum": 0,
            "maximum": 50
          },
          "tasting_notes": {
            "type": "string",
            "maxLength": 1000
          },
          "style": {
            "$ref": "#/components/schemas/WineStyle"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "name",
          "winery",
          "vintage",
          "region",
          "grape_variety",
          "alcohol_content",
          "tasting_notes",
          "style",
          "created_at",
          "updated_at"
        ]
      },
      "CreateWineLabelRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "winery": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "vintage": {
            "type": "integer",
            "minimum": 1800
          },
          "region": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "grape_variety": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "alcohol_content": {
            "type": "number",
            "minimum": 0,
            "maximum": 50
          },
          "tasting_notes": {
            "type": "string",
            "maxLength": 1000
          },
          "style": {
            "$ref": "#/components/schemas/WineStyle"
          }
        },
        "required": [
          "name",
          "winery",
          "vintage",
          "region",
          "grape_variety",
          "alcohol_content",
          "tasting_notes",
          "style"
        ]
      },
      "UpdateWineLabelRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "winery": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "vintage": {
            "type": "integer",
            "minimum": 1800
          },
          "region": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "grape_variety": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "alcohol_content": {
            "type": "number",
            "minimum": 0,
            "maximum": 50
          },
          "tasting_notes": {
            "type": "string",
            "maxLength": 1000
          },
          "style": {
            "$ref": "#/components/schemas/WineStyle"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "environment": {
            "type": "string",
            "enum": ["development", "production", "test"]
          }
        },
        "required": ["status", "timestamp", "environment"]
      },
      "WineLabelsResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WineLabel"
            }
          },
          "total": {
            "type": "integer"
          },
          "hasMore": {
            "type": "boolean"
          },
          "cached": {
            "type": "boolean"
          }
        },
        "required": ["success", "data", "total", "hasMore", "cached"]
      },
      "WineLabelResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "$ref": "#/components/schemas/WineLabel"
          },
          "cached": {
            "type": "boolean"
          }
        },
        "required": ["success", "data"]
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["success", "message"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["error", "message"]
      },
      "ValidationErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              },
              "required": ["field", "message"]
            }
          }
        },
        "required": ["error", "message", "details"]
      },
      "RateLimitResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "retryAfter": {
            "type": "integer"
          }
        },
        "required": ["error", "message", "retryAfter"]
      }
    }
  }
}
